{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@root/*": [
        "src/*"
      ],
      "@pkgs/*": [
        "packages/*"
      ]
    },
    "outDir": "./dist/",
    "lib": [
      "DOM",
      "ESNext",
      "DOM.Iterable"
    ],
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    // lint
    "noEmit": true,
    "allowJs": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "strict": true,
    "sourceMap": true,
    "noImplicitAny": true
  },
  "include": [
    "./src/**/*",
    "./scripts/**/*",
    "./packages/**/*",
    "./e2e/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}