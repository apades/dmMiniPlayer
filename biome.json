{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": false,
    "ignore": [
      "**/dist/*",
      "**/lib/*",
      "**/build/*",
      "packages/js-cookie/save.js",
      "bilibili-evaolved"
    ],
    "include": [
      "**/*"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "lineEnding": "lf"
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "noNonNullAssertion": "off",
        "useSingleVarDeclarator": "off",
        "noParameterAssign": "off",
        "useDefaultParameterLast": "off",
        "useTemplate": "off",
        "noArguments": "off"
      },
      "suspicious": {
        "noExplicitAny": "off",
        "noConfusingVoidType": "off",
        "noArrayIndexKey": "off",
        "noImplicitAnyLet": "off",
        "noAsyncPromiseExecutor": "off"
      },
      "complexity": {
        "noForEach": "off",
        "noBannedTypes": "off"
      },
      "a11y": {
        "all": false
      },
      "correctness": {
        "useExhaustiveDependencies": "off",
        "noConstructorReturn": "off",
        "noSelfAssign": "off",
        "useJsxKeyInIterable": "off"
      },
      "security": {
        "noDangerouslySetInnerHtml": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "asNeeded"
    }
  },
  "json": {
    "formatter": {
      "enabled": true
    }
  }
}