{
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@root/*": ["../../src/*"],
      "@pkgs/*": ["../../packages/*"]
    },
  },
  "include": [
    "./**/*",
    "../../src/**/*",
  ]
}
